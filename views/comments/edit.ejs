<%-include('../partials/header.ejs')-%>
<div class="container">
<div class="row">

  <h2 style="text-align:center;">Edit Comment</h2>
  <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
    <div style="margin:20px auto; width:30%">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%=comment.text%>">
      </div>
      <div class="form-group">
        <button class=" btn btn-lg btn-default btn-block btn-primary" type="submit" class="btn btn-small" name="button">SUBMIT</button>
      </div>
      <a href="/campgrounds">Go Back</a>
    </div>
  </form>
</div>
</div>
<%-include('../partials/footer.ejs')-%>
