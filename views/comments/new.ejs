<%-include('../partials/header.ejs')-%>
<div class="container">
<div class="row">

  <h2 style="text-align:center;">Add New Comment to <%=campground.name%></h2>
  <form action="/campgrounds/<%=campground._id%>/comments" method="post">
    <div style="margin:20px auto; width:30%">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="text" value="">
      </div>
      <div class="form-group">
        <button class=" btn btn-lg btn-default btn-block btn-primary" type="submit" class="btn btn-small" name="button">SUBMIT</button>
      </div>
      <a href="/campgrounds">Go Back</a>
    </div>

  </form>

</div>
</div>
<%-include('../partials/footer.ejs')-%>
