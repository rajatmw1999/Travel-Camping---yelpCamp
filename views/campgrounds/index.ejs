<%-include('../partials/header.ejs')-%>


<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelpcamp!</h1>
      <p>View all our handpicked campgrounds from all over the world.</p>
      <p><a class="btn btn-large btn-primary" href="/campgrounds/new">Add a new campground</a></p>
    </div>
  </header>
  <div class="row text-center">
    <%campgrounds.forEach(function(campground){%>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%=campground.image%>" id="yelpcamp-images">
        <div class="caption">
          <h4><%=campground.name%></h4>
        </div>
        <p>
<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Show more</a>
        </p>
      </div>

    </div>
        <% }) %>
  </div>
</div>

<%-include('../partials/footer.ejs')-%>
